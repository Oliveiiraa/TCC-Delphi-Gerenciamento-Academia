begin
   case ComboBoxDespesas.ItemIndex of
  0:with ADOQueryConsultaDespesas do
  begin
    Active := False;
    Close;
    SQL.Clear;
    SQL.Add('Select*from TB_DESPESAS                                           ');
    sql.Add('Where COD_DPS LIKE ''%' + edt_buscardespesas.Text + '%''                   ');
